{
  "name": "loto-mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "start:clear": "expo start --clear",
    "start:tunnel": "expo start --tunnel",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "doctor": "npx expo-doctor",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run typecheck && npm run lint && npm test",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "prebuild:android": "expo prebuild --platform android",
    "prebuild:ios": "expo prebuild --platform ios",
    "run:android": "expo run:android",
    "run:ios": "expo run:ios",
    "build:dev": "eas build -p all --profile development",
    "build:dev:android": "eas build -p android --profile development",
    "build:dev:ios": "eas build -p ios --profile development",
    "build:dev:device": "eas build -p ios --profile development-device",
    "build:preview": "eas build -p all --profile preview",
    "build:android": "eas build -p android --profile production",
    "build:ios": "eas build -p ios --profile production",
    "submit:android": "eas submit -p android --profile production",
    "submit:ios": "eas submit -p ios --profile production",
    "update:preview": "eas update --branch preview --message",
    "update:production": "eas update --branch production --message",
    "eas:configure": "eas update:configure"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "clsx": "^2.1.1",
    "expo": "~54.0.31",
    "expo-av": "~16.0.8",
    "expo-clipboard": "~8.0.8",
    "expo-constants": "~18.0.13",
    "expo-haptics": "~15.0.8",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-router": "~6.0.21",
    "expo-sharing": "~14.0.8",
    "expo-speech": "^14.0.8",
    "expo-status-bar": "~3.0.9",
    "lucide-react-native": "^0.562.0",
    "nativewind": "^4.2.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-confetti-cannon": "^1.5.2",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "^4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-view-shot": "4.0.3",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "^0.5.1",
    "socket.io-client": "^4.8.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.19",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.0",
    "babel-preset-expo": "~54.0.9",
    "eslint": "^8.57.1",
    "eslint-config-expo": "~10.0.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.7",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
